{% extends 'GaoAdminBundle::layout_no_login.html.twig' %}
{% block title %}Forgot password{% endblock title %}
{% block body_class %}hold-transition login-page{% endblock %}
{% block contents_main %}
<div class="login-box">
  <div class="login-logo">
    <a href="#"><b>Admin</b>LTE</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    {% for flashMessage in app.session.flashbag.get('success') %}
      <p class="login-box-msg">{{ flashMessage }}</p>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('unsuccess') %}
      <p class="login-box-msg">{{ flashMessage }}</p>
    {% endfor %}

    <form action="" method="post">
      <input type="hidden" name="csrf_token" value="{{ csrf_token("forgot_password") }}" />
      <div class="form-group has-feedback">
        <input id="username" name="username" type="text" class="form-control" placeholder="Username">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input id="email" name="email" type="email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <button type="submit" name="submit" class="btn btn-primary btn-block btn-flat">Request</button>
        </div>
      </div>
    </form>

    <br>
    <a href="{{ path('admin_login') }}"><i class="fa fa-long-arrow-left"></i> Back</a>

  </div>
  <!-- /.login-box-body -->
</div>
{% endblock contents_main %}