{% extends 'GaoC5Bundle::layout.html.twig' %}
{% set menu_selected = 'account' %}
{% block contents_main %}
    <div class="clearfix boxHead">
        <h1 class="title"><i class="glyphicon glyphicon-screenshot"></i> Quản lý tài khoản</h1>
        <div class="desc">Thay đổi mật khẩu...</div>
    </div>

    <div class="clearfix boxEnter">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-info">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('unsuccess') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <form class="form" role="form" action="" method="post">
            {#<div class="form-group">
                <label for="">Mật khẩu cũ</label>
                <input type="password" class="form-control" name="oldPassword" placeholder="Mật khẩu cũ">
            </div>#}
            <div class="form-group">
                <label for="">Mật khẩu mới</label>
                <input type="password" class="form-control" name="newPassword" placeholder="Mật khẩu mới">
            </div>
            <div class="form-group">
                <label for="">Nhập lại mật khẩu</label>
                <input type="password" class="form-control" name="retypePassword" placeholder="Nhập lại mật khẩu">
            </div>
            <div class="form-group">
                <label for="">Họ và tên</label>
                <input type="text" class="form-control" name="fullName" value="{{ fullName | default('') }}" placeholder="Nên trùng với tên đăng ký tài khoản ngân hàng">
            </div>
            <div class="form-group">
                <label for="">Số tài khoản (Vietcombank)</label>
                <input type="text" class="form-control" name="vcbAccNumber" value="{{ vcbAccNumber | default('') }}" placeholder="Tài khoản ngân hàng để giao dịnh">
            </div>
            <div class="form-group">
                <label for="">Số điện thoại</label>
                <input type="text" class="form-control" name="phone" value="{{ phone | default('') }}" placeholder="Số điện thoại liên lạc">
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="email" class="form-control" name="email" value="{{ email | default('') }}" placeholder="Địa chỉ email">
            </div>
            <div class="btnWrap"><button type="submit" name="submit" class="btn btn-orange">Cập nhật</button></div>
        </form>
    </div>


{% endblock contents_main %}