{% extends 'GaoC5Bundle::layout.html.twig' %}
{% set menu_selected = 'dispute' %}
{% block contents_main %}
    <div class="clearfix boxHead">
        <h1 class="title"><i class="glyphicon glyphicon-screenshot"></i> Tranh chấp</h1>
        <div class="desc">Tạo bằng chứng đã thực hiện giao dịch, ...</div>
    </div>

    <div class="clearfix boxEnter">
        <div class="alert alert-info">
            <strong>Info!</strong> Indicates a neutral informative change or action.
        </div>
        <form class="form" role="form">
            <div class="form-group">
                <label for="">Giải trình</label>
                <textarea class="form-control" id="" cols="" rows="3" placeholder="Message"></textarea>
            </div>
            <div class="form-group">
                <label for="">Văn bản đính kèm</label>
                <div class="form-control" style="height: auto">
                    <label class="btn btn-default btn-file">
                        Chọn file... <input type="file" style="display: none;">
                    </label>
                </div>
            </div>
            <div class="btnWrap"><button type="submit" class="btn btn-orange">Submit</button></div>
        </form>
    </div>

    <script type="text/javascript">
    $(document).on('change', ':file', function() {
        var input = $(this),
            numFiles = input.get(0).files ? input.get(0).files.length : 1,
            label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
        input.trigger('fileselect', [numFiles, label]);
    });

    $(document).ready( function() {
        $(':file').on('fileselect', function(event, numFiles, label) {
            console.log(numFiles);
            console.log(label);
        });
    });
</script>
{% endblock contents_main %}