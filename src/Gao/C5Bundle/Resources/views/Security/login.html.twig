{% extends 'GaoC5Bundle::layout.html.twig' %}

{% block contents_main %}
    <div id="login" class="fancyCommon">
        <div class="titlebar clearfix">
            <h2 class="title">Account Login!</h2>
            <div class="isMember pull-right"><span class="txt">No member?</span> <a class="btn btn-primary btn-xs login" href="#signup">Sign Up</a></div>
        </div>
        {% if error %}
            <div class="fcDesc">{{ error.message }}</div>
        {% endif %}
        <form action="{{ path('login_check') }}" method="post" class="formLogin" role="form">        
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            <div class="form-group">
                <label for="username">Email address</label>
                <input type="text" class="form-control" id="username" name="_username" placeholder="Email or Username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Your password">
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Remember Me
                    </label>
                </div>
                <div class="forgotPw"><a class="link orange" href="">Forgot Password?</a></div>
            </div>
            <div class="btnWrap"><button type="submit" class="btn btn-orange">Login</button></div>
        </form>
    </div>

{% endblock contents_main %}